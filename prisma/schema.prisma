generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model Account {
  id          String    @id @default(cuid())
  userName    String
  name        String
  password    String
  role        Role      @default(STUDENT)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  projects    Project[] @relation("ProjectAccount")
  ownProjects Project[] @relation("ProjectTeacher")

  @@unique([userName, password])
  @@index([userName])
  @@index([role])
}

enum Day {
  MON
  TUE
  WED
}

model Project {
  id            String @id @default(cuid())
  name          String
  description   String
  imageUrl      String
  studentsCount Int
  studentsMax   Int
  cost          Float
  time          String
  location      String
  day           Day    @default(MON)
  minGrade      Int    @default(5)
  maxGrade      Int    @default(11)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  // non students cant sign in
  students  Account[] @relation("ProjectAccount")

  // max 3 teachers
  teachers Account[] @relation("ProjectTeacher")

  @@index([id])
  @@index([name])
}
